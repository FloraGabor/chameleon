<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="floragabor.chameleon">

    <application
        android:allowBackup="true"
        android:icon="@drawable/chameleon_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailView"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".NewItem"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".notification.CreateNoti">
        </activity>
        <service android:name=".notification.NotiService">
        </service>
    </application>

</manifest>